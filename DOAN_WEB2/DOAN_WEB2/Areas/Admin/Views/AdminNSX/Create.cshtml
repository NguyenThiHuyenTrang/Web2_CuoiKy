@model MobileShopConnection.NhaSanXuat
@{
    
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainPlayoutAdmin.cshtml";
}
<style>
    input[type=text], select {
        width: 60%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 80%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 20px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #4CAF50;
        }

    div {
        border-radius: 5px;
        background-color: #808080;
    }
</style>
<body>

    <h3>Thêm Nhà Sản Xuất</h3>

    <div>
        @using (Html.BeginForm("Create", "AdminNSX", FormMethod.Post))
        {
            <div>
                <label for="fname">Mã Nhà Sản Xuất</label>
                <input type="text" id="fname" name="MaNhaSX" placeholder="Nhập mã nhà sản xuất.." required>
            </div>
            <div>
                <label for="lname">Tên Nhà Sản Xuất</label>
                <input type="text" id="lname" name="TenNhaSX" placeholder="Nhập tên nhà sản xuất" required>
            </div>
            <div>
                <label for="country">Tình Trạng SP</label>
                <select id="country" name="TinhTrang" placeholder="Nhập tên nhà sản xuất" required>
                    <option value="0" selected>Chưa Khóa</option>
                    <option value="1">Đã Khóa</option>

                </select>


                <input type="submit" value="Submit">
            </div>
        }


            </div>

</body>