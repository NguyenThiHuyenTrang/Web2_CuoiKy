@model IEnumerable<MobileShopConnection.NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 80%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>

    <h2>Admin Nhà sản xuất</h2>

    <table>
        <tr>
            <th>Mã Nhà Sản Xuất</th>
            <th>Tên Nhà Sản Xuất</th>
            <th>Tình Trạng</th>
            <th colspan="2" text-align center>
                <a href="@Url.Action("Create","AdminNSX")"> <img src="~/css/images/add.png" /></a>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNhaSX</td>
                <td>@item.TenNhaSX</td>
                <td>@item.TinhTrang</td>

                <td><a href="@Url.Action("Edit","AdminNSX",new {id =@item.MaNhaSX })"> <img src="~/css/images/edit.png" /></a></td>
                <td><a href="@Url.Action("Remove","AdminNsx",new {id =@item.MaNhaSX})"><img src="~/css/images/delete.png" /></a></td>

            </tr>
        }
    </table>
</body>

